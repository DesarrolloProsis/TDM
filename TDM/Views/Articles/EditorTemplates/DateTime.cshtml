@model DateTime?

@if (!Model.HasValue)
{
    <input type="datetime" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}
else
{
    <input type="datetime" value="@Model.Value.ToString("yyyy-MM-dd hh:mm:ss")" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}
